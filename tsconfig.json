{
    "compilerOptions": {
        "allowJs": true,
        "resolveJsonModule": true,
        "module": "es6",
        "noImplicitAny": false,
        "target": "es6",
        "sourceMap": true,
        "lib": ["es6", "es5", "dom"],
        "strictNullChecks": true,
        "moduleResolution": "node",
        "outDir": "./dist",
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noUnusedLocals": false,
        "declaration": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
    "types": ["pixi.js"],
    "awesomeTypescriptLoaderOptions": {
        "reportFiles": [
            "./src/**/*"
        ]
    }
}
